from odoo import models

class LibraryBook(models.Model):
    _inherit = 'library.book'

    def action_open_issue_wizard(self):
        return {
            'type': 'ir.actions.act_window',
            'name': 'Issue Book',
            'res_model': 'book.issue.wizard',
            'view_mode': 'form',
            'target': 'new',
            'view_id': self.env.ref(
                'ak_library_management_enhancement.view_book_issue_wizard_form'
            ).id,
            'res_id': self.env['book.issue.wizard'].create({
                'book_id': self.id
            }).id,
        }
